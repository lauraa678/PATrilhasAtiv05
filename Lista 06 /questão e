using System;

namespace Exercício
{
	class Program
	{
		public static void Main()
		{
			Console.WriteLine("Escolha uma opção:");
			
			Console.WriteLine("1- Olá");
			Console.WriteLine("2- Bom dia");
			Console.WriteLine("3- Boa noite");
			Console.Write("Opção: ");
			int opcao = int.Parse(Console.ReadLine());
			
			switch(opcao){
				case 1:
					Console.WriteLine("Você escolheu: Olá!");
					break;
				case 2: 
					Console.WriteLine("Você escolheu: Bom dia!");
					break;
				case 3:
					Console.WriteLine("Você escolheu: Boa noite!");
					break;
				default:
					Console.WriteLine("Opção inválida.");
					break;
			}
		
			Console.WriteLine(" ");
			Console.Write("Press any key to continue . . . ");
			Console.ReadKey(true);
		}
	}
}
