using System;

namespace Exercicíos
{
	class Program
	{
		public static void Main()
		{
			Console.WriteLine("Escreva o número de um dia da semana: ");
			int semana = int.Parse(Console.ReadLine());
			
			switch(semana){ 
				case 1:
					Console.WriteLine("Domingo");
					break;
				case 2:
					Console.WriteLine("Segunda-feira");
					break;
				case 3:
					Console.WriteLine("Terça-feira");
					break;
				case 4: 
					Console.WriteLine("Quarta-feira");
					break;
				case 5:
					Console.WriteLine("Quinta-feira");
					break;
				case 6:
					Console.WriteLine("Sexta-feira");
					break;
				case 7:
					Console.WriteLine("Sábado");
					break;
				default:
					Console.WriteLine("Não existe dia de semana com esse número.");
					break;
			}
					                  
			
			Console.WriteLine(" ");
			Console.Write("Pressione uma tecla qualquer . . . ");
			Console.ReadKey(true);
		}
	}
}
