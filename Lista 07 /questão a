using System;

namespace Exercicíos
{
	class Program
	{
		public static void Main()
		{
			Console.WriteLine("Digite um número qualquer: ");
			int num = int.Parse(Console.ReadLine());
			Console.WriteLine("Números pares até "+ num + ":");
			
			int i = 2;
			
			while (i <= num){
				Console.Write(" " + i + " ");
				i += 2 ;
			}
			
			Console.WriteLine(" ");
			Console.Write("Pressione uma tecla qualquer . . . ");
			Console.ReadKey(true);
		}
	}
}
